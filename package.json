{
  "name": "@jonghyo/textlint-plugin-asciidoc",
  "version": "0.1.2",
  "description": "Asciidoc support for textlint.",
  "keywords": [
    "asciidoc",
    "plugin",
    "textlint"
  ],
  "homepage": "https://github.com/jonghyo/textlint-plugin-asciidoc",
  "bugs": {
    "url": "https://github.com/jonghyo/textlint-plugin-asciidoc/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jonghyo/textlint-plugin-asciidoc.git"
  },
  "license": "MIT",
  "author": "jonghyo",
  "types": "lib/src/index.d.ts",
  "main": "lib/src/index.js",
  "directories": {
    "test": "test"
  },
  "files": [
    "lib",
    "src",
    "!*.tsbuildinfo"
  ],
  "scripts": {
    "build": "npm run clean && tsc -b && tsc -b tsconfig.module.json",
    "clean": "rimraf lib/ module/",
    "prepublish": "npm run --if-present build",
    "test": "jest",
    "tsc": "tsc --noEmit",
    "coverage": "jest --coverage",
    "updateSnapshot": "jest --updateSnapshot",
    "watch": "tsc -b --watch"
  },
  "dependencies": {
    "@asciidoctor/core": "^2.2.8",
    "html-to-text": "^9.0.5"
  },
  "devDependencies": {
    "@textlint/kernel": "^15.2.1",
    "@types/html-to-text": "^9.0.4",
    "@types/jest": "^28.1.6",
    "jest": "^28.1.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.7",
    "typescript": "^5.9.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "email": "m.73816686@gmail.com"
}
